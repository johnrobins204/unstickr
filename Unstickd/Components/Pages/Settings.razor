@page "/settings"
@using Microsoft.EntityFrameworkCore
@using Unstickd.Models
@using Unstickd.Data
@inject AppDbContext DbContext
@inject NavigationManager Nav
@rendermode InteractiveServer

<PageTitle>Unstickd - Settings</PageTitle>

<div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="display-5 fw-bold">Settings</h1>
        <a href="/" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>

    @if (IsLoading)
    {
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    }
    else if (Account == null)
    {
        <div class="alert alert-danger">Error: Could not load account settings.</div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-robot me-2"></i>AI Assistant Configuration</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ollama URL</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-globe"></i></span>
                                <input type="text" class="form-control" @bind="Account.OllamaUrl" placeholder="http://localhost:11434" />
                            </div>
                            <div class="form-text">Address of your local Ollama instance.</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Model Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-box"></i></span>
                                <input type="text" class="form-control" @bind="Account.OllamaModel" placeholder="llama3" />
                            </div>
                            <div class="form-text">Must match a model installed via <code>ollama pull</code>.</div>
                        </div>

                        <div class="d-flex justify-content-end align-items-center">
                            @if (!string.IsNullOrEmpty(StatusMessage))
                            {
                                <span class="text-success me-3 fw-bold animate-fade-out">@StatusMessage</span>
                            }
                            <button class="btn btn-primary" @onclick="SaveSettings">
                                Save Changes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private Account? Account;
    private bool IsLoading = true;
    private string StatusMessage = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Assuming single user scenario with ID 1
            Account = await DbContext.Accounts.FirstOrDefaultAsync(a => a.Id == 1);
            if (Account == null)
            {
                // Fallback / Self-Heal
                Account = new Account { Id = 1, Name = "Writer", OllamaUrl = "http://localhost:11434", OllamaModel = "llama3" };
                DbContext.Accounts.Add(Account);
                await DbContext.SaveChangesAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading settings: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task SaveSettings()
    {
        if (Account == null) return;

        try
        {
            DbContext.Accounts.Update(Account);
            await DbContext.SaveChangesAsync();
            StatusMessage = "Settings Saved!";
            await Task.Delay(3000);
            StatusMessage = "";
        }
        catch (Exception ex)
        {
            StatusMessage = "Error saving settings.";
            Console.WriteLine(ex);
        }
    }
}
