@page "/settings"
@using Microsoft.EntityFrameworkCore
@using Unstickd.Models
@using Unstickd.Data
@inject AppDbContext DbContext
@inject NavigationManager Nav
@rendermode InteractiveServer

<PageTitle>Unstickd - Settings</PageTitle>

<div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="display-5 fw-bold">Settings</h1>
        <a href="/" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>

    @if (IsLoading)
    {
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    }
    else if (Account == null)
    {
        <div class="alert alert-danger">Error: Could not load account settings.</div>
    }
    else
    {
        if (!IsTeacherGatePassed)
        {
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm mt-5">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0"><i class="bi bi-lock me-2"></i>Supervisor Access Required</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Enter Supervisor PIN</label>
                                <input type="password" class="form-control" @bind="TeacherPinInput" @onkeydown="@(e => { if (e.Key == "Enter") CheckTeacherPin(); })" placeholder="4-digit PIN" maxlength="4" />
                            </div>
                            @if (!string.IsNullOrEmpty(PinError))
                            {
                                <div class="alert alert-danger py-1">@PinError</div>
                            }
                            <button class="btn btn-primary w-100" @onclick="CheckTeacherPin">Unlock</button>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-8 col-lg-6">
                    <!-- Writer Profile Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Writer Profile</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Supervisor Name</label>
                                <input type="text" class="form-control" @bind="Account.SupervisorName" placeholder="Parent or Teacher Name" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Supervisor Email</label>
                                <input type="email" class="form-control" @bind="Account.SupervisorEmail" placeholder="contact@example.com" />
                                <div class="form-text">Used for export and notifications.</div>
                            </div>
                        </div>
                    </div>
                    <!-- AI Assistant Configuration Card -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0"><i class="bi bi-robot me-2"></i>AI Assistant Configuration</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Cohere API Key</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-key"></i></span>
                                    <input type="text" class="form-control" @bind="Account.CohereApiKey" placeholder="sk-..." />
                                </div>
                                <div class="form-text">Your Cohere API key (kept private, required for AI features).</div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Use Reasoning Model</label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="reasoningSwitch" @bind="Account.UseReasoningModel" />
                                    <label class="form-check-label" for="reasoningSwitch">Enable advanced reasoning (Command R+)</label>
                                </div>
                                <div class="form-text">Toggle between Cohere's reasoning and chat models.</div>
                            </div>

                            <div class="d-flex justify-content-end align-items-center">
                                @if (!string.IsNullOrEmpty(StatusMessage))
                                {
                                    <span class="text-success me-3 fw-bold animate-fade-out">@StatusMessage</span>
                                }
                                <button class="btn btn-primary" @onclick="SaveSettings">
                                    Save Changes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private Account? Account;
    private bool IsLoading = true;
    private string StatusMessage = "";

    // Teacher Gate State
    private bool IsTeacherGatePassed = false;
    private string TeacherPinInput = "";
    private string PinError = "";
    private const string TeacherPin = "0000"; // MVP: Hardcoded PIN

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Assuming single user scenario with ID 1
            Account = await DbContext.Accounts.FirstOrDefaultAsync(a => a.Id == 1);
            if (Account == null)
            {
                // Fallback / Self-Heal
                Account = new Account { Id = 1, Name = "Writer", CohereApiKey = string.Empty, UseReasoningModel = true };
                DbContext.Accounts.Add(Account);
                await DbContext.SaveChangesAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading settings: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void CheckTeacherPin()
    {
        var entered = TeacherPinInput?.Trim() ?? string.Empty;
        if (entered == TeacherPin)
        {
            IsTeacherGatePassed = true;
            PinError = "";
        }
        else
        {
            PinError = "Incorrect PIN. Please try again.";
        }
    }

    private async Task SaveSettings()
    {
        if (Account == null) return;

        try
        {
            DbContext.Accounts.Update(Account);
            await DbContext.SaveChangesAsync();
            StatusMessage = "Settings Saved!";
            await Task.Delay(3000);
            StatusMessage = "";
        }
        catch (Exception ex)
        {
            StatusMessage = "Error saving settings.";
            Console.WriteLine(ex);
        }
    }
}
