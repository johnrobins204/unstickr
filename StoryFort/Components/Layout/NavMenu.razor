@using StoryFort.Services
@inject StoryState StoryState

<div class="p-6 border-b-4 border-[var(--sidebar-border)] flex flex-col items-center gap-2">
    <img src="/images/story_fort_logo.png" alt="Story Fort Logo" style="width: 64px; height: 64px; object-fit: contain; margin-bottom: 0.5rem;" />
    <h1 class="font-['Press_Start_2P'] text-[10px] leading-relaxed uppercase">Story Quest</h1>
    <div class="mt-2 text-[var(--sidebar-foreground)] opacity-60 text-xs">? Young Writer</div>
</div>

<nav class="flex-1 p-4 space-y-4">
    <div>
        <div class="font-bold text-xs text-[var(--sidebar-foreground)] mb-1 tracking-widest">Writing Desk</div>
        <ul class="space-y-1 ml-2">
            <li>
                <NavLink href="@($"planner/{(StoryState?.StoryId > 0 ? StoryState.StoryId : 1)}")" class="sidebar-btn w-full flex items-center gap-2 px-3 py-2 border-[var(--sidebar-border)] text-left" ActiveClass="active" aria-label="Map Room">
                    <i data-lucide="map" class="size-4 shrink-0"></i>
                    <span class="text-xs">Map Room</span>
                </NavLink>
            </li>
            <li>
                <NavLink href="editor" class="sidebar-btn w-full flex items-center gap-2 px-3 py-2 border-[var(--sidebar-border)] text-left" ActiveClass="active" aria-label="Writing Desk">
                    <i data-lucide="feather" class="size-4 shrink-0"></i>
                    <span class="text-xs">Writing Desk</span>
                </NavLink>
            </li>
            <li>
                <NavLink href="@($"review/{(StoryState?.StoryId > 0 ? StoryState.StoryId : 1)}")" class="sidebar-btn w-full flex items-center gap-2 px-3 py-2 border-[var(--sidebar-border)] text-left" ActiveClass="active" aria-label="Lantern">
                    <i data-lucide="search" class="size-4 shrink-0"></i>
                    <span class="text-xs">Lantern</span>
                </NavLink>
            </li>
            <li>
                <NavLink href="@($"polish/{(StoryState?.StoryId > 0 ? StoryState.StoryId : 1)}")" class="sidebar-btn w-full flex items-center gap-2 px-3 py-2 border-[var(--sidebar-border)] text-left" ActiveClass="active" aria-label="Polishing Station">
                    <i data-lucide="sparkles" class="size-4 shrink-0"></i>
                    <span class="text-xs">Polishing Station</span>
                </NavLink>
            </li>
        </ul>
    </div>
    <div>
        <div class="font-bold text-xs text-[var(--sidebar-foreground)] mb-1 tracking-widest">Book Shelf</div>
        <NavLink href="reader" class="sidebar-btn w-full flex items-center gap-2 px-3 py-2 border-[var(--sidebar-border)] text-left" ActiveClass="active" aria-label="Reading Nook">
            <i data-lucide="book-open" class="size-4 shrink-0"></i>
            <span class="text-xs">Reading Nook</span>
        </NavLink>
    </div>
    <div>
        <div class="font-bold text-xs text-[var(--sidebar-foreground)] mb-1 tracking-widest">Creative Lab</div>
        <NavLink href="design" class="sidebar-btn w-full flex items-center gap-2 px-3 py-2 border-[var(--sidebar-border)] text-left" ActiveClass="active" aria-label="Design Lab">
            <i data-lucide="palette" class="size-4 shrink-0"></i>
            <span class="text-xs">Design Lab</span>
        </NavLink>
    </div>
</nav>

<div class="p-4 border-t-4 border-[var(--sidebar-border)]">
    <div class="text-xs text-[var(--sidebar-foreground)] opacity-50 text-center">
        v0.2.0  Interactive
    </div>
</div>
